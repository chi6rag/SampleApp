
<li>
  <%= gravatar_for(user, size: 50) %>
  <%= link_to user.name, user %>

  <!-- if an admin accesses the page, he should see a link to delete the user who's profile page is accessed -->
  <!-- an admin should not see such a link on his page -->
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "Delete user", user_path(user), method: :delete, data: { confirm: "Are you sure?" } %>
  <% end %>
</li>
